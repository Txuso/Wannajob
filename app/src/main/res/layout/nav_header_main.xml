<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorGray"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_header_profile">

    <com.example.txuso.wannajob.misc.RoundedImageView
        android:id="@+id/nav_header_main_user_photo"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_marginTop="30dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/nav_header_main_user_name"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/nav_header_main_published_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text= "@string/edit_profile_here" />

</LinearLayout>
