<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenTransparent"
    android:windowBackground="@color/transparent"
    android:theme="@android:style/Theme.Translucent.NoTitleBar"
    tools:context="com.example.txuso.wannajob.activities.JobMatchActivity">

    <TextView
        android:textSize="30dp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOB MATCH \n"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView" />

    <ImageView
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView1"
        android:src="@drawable/calendar"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="59dp" />

    <TextView
        android:textSize="20dp"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be On Time"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_call_24dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignStart="@+id/imageView1" />
    <TextView
        android:textSize="20dp"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message or Call Josu: \n 697 737 162"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


    <ImageView
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:src="@drawable/evaluate_eye"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <TextView
        android:textSize="20dp"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Don't forget to evaluate your wannajober"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="EVALUATE"
        android:textSize="25dp"
        android:id="@+id/button2"
        android:textColor="@color/colorGreen"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
