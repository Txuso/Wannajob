<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp"
    android:id="@+id/user_opinion_cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/user_opinion_photo"
            android:layout_gravity="center_vertical"
            />

        <RatingBar
            android:id="@+id/user_opinion_stars"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="-4dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:numStars="5"
            android:isIndicator="true"
            android:progressTint="@color/colorGreen"
            android:secondaryProgressTint="@color/colorGreen"
            android:layout_toRightOf="@+id/user_opinion_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:id="@+id/user_opinion_name"
            android:textStyle="bold"
            android:layout_toRightOf="@id/user_opinion_photo"
            android:text="Txuso"
            android:textColor="@color/colorGreen"
            android:layout_below="@+id/user_opinion_stars"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_opinion_job_name"
            android:text="Limpiar Gracia"
            android:paddingLeft="8dp"
            android:layout_below="@+id/user_opinion_stars"
            android:layout_toRightOf="@+id/user_opinion_name"
            android:textStyle="bold"
            android:textSize="18dp"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_opinion_text"
            android:text="Hostia pues el tio este lo hizo de puta madre aisj dasjn asoidasoijd oiasjd iasjd oiasj doiajsdoijasodij asoidjasoijdiaosjd oiasjdioasjoiasjdoiajsdoiasjdoijasdasas "
            android:paddingTop="4dp"
            android:textStyle="italic"
            android:textSize="14dp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/user_opinion_job_name"
            android:layout_toRightOf="@id/user_opinion_photo"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
