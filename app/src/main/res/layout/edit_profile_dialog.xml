<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_profile_dialog_selector">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_margin="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                >
                <TextView
                    android:id="@+id/titlet"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                   android:textAlignment="center"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="@string/edit_profile_text"
                    android:textColor="@color/color_menufont"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    />
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titlet5"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="2dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="Location"
                    android:textColor="@color/color_texmenutop"/>


                <TextView
                    android:id="@+id/titlet6"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="Ramon y Cajal, Barcelona"
                    android:textColor="@color/color_menufont"/>

                </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titlet17"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/name_text"
                    android:textColor="@color/color_texmenutop"/>

                <EditText
                    android:id="@+id/titlet8"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="Eliza Mark"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titlet18"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/age_text"
                    android:textColor="@color/color_texmenutop"/>


                <EditText
                    android:id="@+id/titlet19"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="23"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titl1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/description_text"
                    android:textColor="@color/color_texmenutop"/>

                <EditText
                    android:id="@+id/titl"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:text="VAMOS WANNAJOBERS!!!!!!"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            >

            <TextView
                android:id="@+id/titlet7"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:background="@color/colorGreen"
                android:text="@string/save_changes"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>


        </LinearLayout>

</LinearLayout>