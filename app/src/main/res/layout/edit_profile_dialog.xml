<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@drawable/rounded_corner_layout">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                >
                <TextView
                    android:id="@+id/titlet"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                   android:textAlignment="center"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="@string/edit_profile_text"
                    android:textColor="@color/color_menufont"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    />
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:id="@+id/edit_profile_dialog_location_layout"
                android:layout_marginBottom="30dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="2dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="Location"
                    android:textColor="@color/color_texmenutop"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"

                    android:paddingBottom="10dp"
                    android:textSize="14dp"

                    android:text="Ramon y Cajal, Barcelona"
                    android:textColor="@color/color_menufont"/>

                </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titlet17"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/name_text"
                    android:textColor="@color/color_texmenutop"/>

                <EditText
                    android:id="@+id/edit_profile_dialog_name"
                    android:selectAllOnFocus="true"
                    android:inputType="textCapWords"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titlet18"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/age_text"
                    android:textColor="@color/color_texmenutop"/>


                <EditText
                    android:id="@+id/edit_profile_dialog_age"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:selectAllOnFocus="true"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/titl1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"


                    android:paddingBottom="10dp"
                    android:textSize="14dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/description_text"
                    android:textColor="@color/color_texmenutop"/>

                <EditText
                    android:id="@+id/edit_profile_dialog_description"
                    android:selectAllOnFocus="true"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:textColor="@color/color_menufont"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/edit_profile_dialog_save_changes_layout"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:background="@color/colorWhite"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:background="@drawable/rounded"
                android:text="@string/save_changes"
                android:textColor="@color/colorGreen"/>

        </LinearLayout>


        </LinearLayout>

</LinearLayout>